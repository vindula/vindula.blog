<metal:macro metal:define-macro="blogtop">	
		<tal:define define="view python:context.restrictedTraverse('@@blog-macros');
                            blog view/getBlogTop | nothing;
                            blog_url view/getURLBlog"
			 tal:condition="blog">
			 	
			<!-- Title -->
			<div id="blog-top-title">
                <div id="title">
                    <table>
                        <tbody>
                            <tr>
                                <th>
                                    <a tal:attributes="href blog_url" tal:content="blog/title|nothing">Blog Caixa teste 01 Lorem Ipsum sit</a>
                                </th>
                            </tr>
                        </tbody>
                    </table>
                </div>
				<div id="img">
					<a tal:attributes="href blog/url|nothing">
					<img tal:attributes="src blog/image|nothing" tal:condition="blog/image|nothing">
					</a>
				</div>
			</div>
			
			<!-- Menu -->
			<div id="blog-top-menu">
                <ul tal:define="context_type context/Type;
                                template_name python:request.URL.split('/')[-1];
                                menu_name python:{'blog-view':'inicio', 'about-view':'about', 'autores-view':'autores'}.get(template_name, 'inicio')">
                    <li id="initial"
                        tal:condition="blog/menu_initial|nothing"
                        tal:attributes="class python:context_type == 'Blog' and (menu_name == 'inicio' and 'active' or '')">
                        <a tal:attributes="href blog_url">
                            In&iacute;cio
                        </a>
                    </li>
                    <li id="abaut"
                        tal:condition="blog/menu_abaut|nothing"
                        tal:attributes="class python:context_type == 'Blog' and (menu_name == 'about' and 'active' or '')">
                        <a tal:attributes="href string:${blog_url}/about-view">
                            Sobre o Blog
                        </a>
                    </li>
                    <li id="authors"
                        tal:condition="blog/menu_authors|nothing"
                        tal:attributes="class python:context_type == 'Blog' and (menu_name == 'autores' and 'active' or '')">
                        <a tal:attributes="href string:${blog_url}/autores-view">
                            Autores
                        </a>
                    </li>
                </ul>
			</div>
		</tal:define>
</metal:macro>