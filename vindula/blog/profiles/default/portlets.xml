<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="plone">

	<portlet addview="vindula.blog.PortletBlogFiles"
			 title="Portlet Arquivos do Blog"
			 description="Lista as pastas do blog, indicando a quantidade de posts em cada uma." />
			 
	<portlet addview="vindula.blog.PortletBlogSearch"
			 title="Portlet Busca no Blog"
			 description="Portlet com um campo de busca por posts em todo o blog." 
             />        
    
    <portlet addview="vindula.blog.PortletBlogRss"
             title="Portlet RSS no Blog"
             description="Portlet específico para acompanhar as notícias postadas no blog."
             />
             
    <assignment
        category="content_type"
        key="Blog"
        manager="plone.rightcolumn"
        name="Portlet Busca Blog"
        type="vindula.blog.PortletBlogSearch"
        insert-before="*"
        />
        
    <assignment
        category="content_type"
        key="Blog"
        manager="plone.rightcolumn"
        name="Portlet Arquivos do Blog"
        type="vindula.blog.PortletBlogFiles"
        insert-before="vindula.blog.PortletBlogRss"
        />
        
    <assignment
        category="content_type"
        key="Blog"
        manager="plone.rightcolumn"
        name="Portlet RSS no Blog"
        type="vindula.blog.PortletBlogRss"
        insert-after="vindula.blog.PortletBlogFiles"
        />
        
</portlets>